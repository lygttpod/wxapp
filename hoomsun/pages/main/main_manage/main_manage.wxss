}

/*中间布局*/
.flex-wrp-center{
width: 50%;
display:flex;
}
.item_center_text_constant{
margin-top: 10px;
margin-bottom: 10px;
color: #999999;
font-size: 16px;
}
.item_center_text_value{
color: #555555;
font-size: 24px;
}
.item_center_text_value_unit{
margin-left: 2px;
font-size: 11px;
color: #555555;
}

/*右边布局*/
.flex-wrp-right{  
    float: right;
width: 50%;
display:flex;
}
.item_right_text_constant{
align-self: center;

margin-top: 10px;
margin-bottom: 10px;
color: #999999;
font-size: 16px;
}
.item_right_text_value{
color: #555555;
font-size: 24px;
}
.item_right_text_value_unit{
margin-left: 2px;
