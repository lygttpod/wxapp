.item_view{
padding: 20px;
margin-top: 10px;
margin-bottom: 10px;
background-color: #ffffff;
}

.flex-wrp{
margin-top: 10px;
display:flex;
background-color: #ffffff;
}


.item_text_name{
width: 50%;
color: #555555;
font-size: 20px;
}

.item_progress{
width: 35%;
}
.item_progress_des{
width: 15%;
margin-left: 10px;
font-size: 15px;
color: #555555;
}

/*左边布局*/
.flex-wrp-left{
width: 50%;
display:flex;
}
.item_left_text_constant{
margin-top: 10px;
margin-bottom: 10px;
color: #999999;
font-size: 16px;
}
.item_left_text_value{
font-size: 24px;
color: #fb5353;
}
.item_left_text_value_unit{
margin-left: 2px;
